# Auto-generated by Vagrantp - Container specification
# This is a reference for container configuration, actual creation uses podman CLI

# Container Image
IMAGE: <%= image %>

# Container Name
NAME: <%= name %>

# Resources
MEMORY: <%= memory %>MB
CPUS: <%= cpus %>

# Networking
NETWORK_MODE: <%= network_mode %>
<% if ip_address %>
IP_ADDRESS: <%= ip_address %>
<% end %>

# Port Forwarding
<% if ports %>
<% ports.each do |port| %>
<% if port[:auto] %>
PORT: auto:<%= port[:container] %>
<% else %>
PORT: <%= port[:host] %>:<%= port[:container] %>
<% end %>
<% end %>
<% end %>

# Environment Variables
<% if env_vars %>
<% env_vars.each do |key, value| %>
ENV: <%= key %>=<%= value %>
<% end %>
<% end %>

# Volumes
<% if volumes %>
<% volumes.each do |volume| %>
VOLUME: <%= volume %>
<% end %>
<% end %>
